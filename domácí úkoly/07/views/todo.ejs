<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= todo.title %></title>
</head>
<body>
    <div id="todoObject" data-todo-id="<%= todo.id %>"></div>
    
    <script>
        const ws = new WebSocket('ws://localhost:3000')
        const thisTodoId = document.getElementById("todoObject").getAttribute("data-todo-id");

        ws.addEventListener("message", (ev) => {
            const data = JSON.parse(ev.data)

            if(data.todoId == thisTodoId){
                if(data.type === "todo"){
                    const el = document.getElementById("todo");
                    el.innerHTML = data.html;

                }else if(data.type === "removedTodo"){
                    alert("Toto TODO bylo odstranÄ›no.");
                    document.location.href = "/";
                }
            }
        })

    </script>

    <div id="todo">
        <%- include("_todo") %>
    </div>

</body>
</html>
